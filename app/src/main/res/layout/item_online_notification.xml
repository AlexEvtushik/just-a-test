<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

    <ImageView
            android:id="@+id/view_notification_icon"
            android:layout_width="@dimen/notification_icon_size"
            android:layout_height="@dimen/notification_icon_size"
            android:layout_margin="@dimen/screen_margin_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/view_notification_title"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:layout_width="@dimen/notification_icon_mark_size"
            android:layout_height="@dimen/notification_icon_mark_size"
            android:layout_marginTop="@dimen/notification_icon_mark_margin"
            android:layout_marginStart="@dimen/notification_icon_mark_margin"
            android:src="@drawable/ic_online"
            app:layout_constraintStart_toStartOf="@id/view_notification_icon"
            app:layout_constraintTop_toTopOf="@id/view_notification_icon"/>

    <TextView
            android:id="@+id/view_notification_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:paddingEnd="@dimen/screen_margin_normal"
            style="@style/Title"
            app:layout_constraintStart_toEndOf="@id/view_notification_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_notification_icon"
            tools:text="Notifications title "/>

    <TextView
            android:id="@+id/view_notification_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/screen_margin_small"
            android:layout_marginBottom="@dimen/screen_margin_normal"
            style="@style/Caption"
            app:layout_constraintStart_toStartOf="@id/view_notification_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_notification_title"
            tools:text="Dec 31, 12:00am"/>

    <View android:layout_width="match_parent"
          android:layout_height="@dimen/items_separator_height"
          android:background="@color/platinum"
          android:layout_marginStart="@dimen/screen_margin_normal"
          app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>