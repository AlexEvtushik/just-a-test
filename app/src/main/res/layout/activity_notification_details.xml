<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/view_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/view_notification_icon"
                android:layout_width="@dimen/notification_big_icon_size"
                android:layout_height="@dimen/notification_big_icon_size"
                android:layout_marginTop="@dimen/screen_margin_large"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <View
                android:id="@+id/view_separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/items_separator_height"
                android:background="@color/platinum"
                android:layout_marginTop="@dimen/screen_margin_large"
                android:layout_marginStart="@dimen/screen_margin_normal"
                android:layout_marginEnd="@dimen/screen_margin_normal"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@id/view_notification_icon"/>

        <TextView
                android:id="@+id/view_notification_subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/screen_margin_normal"
                android:paddingStart="@dimen/screen_margin_normal"
                android:layout_marginTop="@dimen/screen_margin_large"
                style="@style/Title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_separator"/>

        <androidx.constraintlayout.widget.Group
                android:id="@+id/view_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="view_notification_positive_action,view_notification_negative_action"/>

        <Button
                android:id="@+id/view_notification_positive_action"
                android:layout_width="0dp"
                android:layout_height="@dimen/notification_action_height"
                android:background="@color/black"
                android:layout_marginTop="@dimen/screen_margin_large"
                android:layout_marginBottom="@dimen/screen_margin_large"
                android:layout_marginStart="@dimen/screen_margin_normal"
                android:stateListAnimator="@null"
                style="@style/Button"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/view_notification_negative_action"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_notification_subtitle" tools:targetApi="lollipop"/>

        <Button
                android:id="@+id/view_notification_negative_action"
                android:layout_width="0dp"
                android:layout_height="@dimen/notification_action_height"
                android:background="@null"
                android:layout_marginTop="@dimen/screen_margin_large"
                android:layout_marginBottom="@dimen/screen_margin_large"
                android:layout_marginEnd="@dimen/screen_margin_normal"
                style="@style/TextButton"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toEndOf="@id/view_notification_positive_action"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_notification_subtitle"/>

        <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/view_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>